            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="src.projetandroid.GererIconesActivity" />
        </activity>
        <activity
            android:name="src.projetandroid.SupprimerIconeActivity"
            android:label="@string/title_activity_supprimer_icone"
